<main class="container devise">
  <h1>Log in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="devise__inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  placeholder: "Email" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  placeholder: "Password" %>
      <%= f.input :remember_me,
                  as: :boolean,
                  wrapper_html: { class: 'devise__remember-me' },
                  label_html: { class: 'devise__remember-me__label' },
                  input_html: { class: 'devise__remember-me__input'} if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: 'btn btn--primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</main>
